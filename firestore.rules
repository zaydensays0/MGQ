rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public user profiles: Allow anyone to read, but only the owner to write.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // User-specific subcollections: Only the owner can read/write.
    match /users/{userId}/{collectionId}/{docId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
