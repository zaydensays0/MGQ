rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read public profile data.
      allow read: if request.auth != null;

      // Only allow the owner to write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Secure all subcollections (notes, savedQuestions, etc.).
      // Only the owner can read/write their own subcollection documents.
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
